{
  "manifest_version": 3,
  "name": "Tyquill Extension",
  "version": "1.0.0",
  "description": "Chrome Extension with React + TypeScript",
  "permissions": ["storage", "sidePanel", "tabs", "scripting"],
  "host_permissions": ["<all_urls>"],
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png", 
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "background": {
    "service_worker": "background/index.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_title": "Open Tyquill Side Panel",
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript/index.js"]
    }
  ]
} 