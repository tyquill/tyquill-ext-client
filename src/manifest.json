{
  "manifest_version": 3,
  "name": "Tyquill Extension",
  "version": "1.0.0",
  "description": "Chrome Extension with React + TypeScript",
  "permissions": ["storage", "sidePanel", "tabs"],
  "background": {
    "service_worker": "background/index.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_title": "Open Tyquill Side Panel"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript/index.js"]
    }
  ]
} 